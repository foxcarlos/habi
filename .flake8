[flake8]
max-line-length = 119
max-complexity = 15
# B = bugbear
# B9 = bugbear opinionated (incl line length)
# E203: whitespace before ':' (black behaviour)
# E501: flake8 line length (covered by bugbear B950)
# W503: line break before binary operator (black behaviour)
ignore = B010,E123,E133,E226,E241,E242,F811,F601,W503,W504
per-file-ignores=
    __init__.py:F401
exclude = .git,__pycache__,build,dist,payment_bambora
